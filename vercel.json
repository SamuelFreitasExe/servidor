{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/uploads/$1"
        }
    ],
    "env": {
        "DB_HOST": "@db_host",
        "DB_USER": "@DB_USER",
        "DB_PASSWORD": "@DB_PASSWORD",
        "DB_NAME": "@DB_NAME"
    }
}