{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/uploads/$1"
        }
    ],
    "env": {
        "DB_HOST": "@db-host",
        "DB_USER": "@db-user",
        "DB_PASSWORD": "@db-password",
        "DB_NAME": "@db-name"
    }
}